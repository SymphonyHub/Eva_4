<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body.dark-mode {
            background-color: #121212;
            color: #ffffff;
        }
        body.dark-mode .table {
            background-color: #1f1f1f;
            color: #ffffff;
        }
        body.light-mode {
            background-color: #ffffff;
            color: #000000;
        }
        .light-mode .table {
            background-color: #ffffff;
            color: #000000;
        }
        .light-mode .table th, .light-mode .table td {
            border: 1px solid #dee2e6;
        }
    </style>
</head>
<body class="light-mode">
    <div class="container mt-5">
        <h1 class="text-center"></h1>
        <div class="d-flex justify-content-end mb-3">
            <input type="text" id="filterInput" class="form-control w-25 mr-2" placeholder="Filtrar por ID">
            <button id="filterButton" class="btn btn-primary">Filtrar</button>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Plan</th>
                    <th>Importe</th>
                    <th>MÃ©todo de Pago</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody id="paymentsTableBody">
                <% payments.forEach(payment => { %>
                <tr>
                    <td><%= payment.id %></td>
                    <td><%= payment.PaymentUser.name %></td>
                    <td><%= payment.PaymentPlan.name %></td>
                    <td>$<%= payment.amount %></td>
                    <td><%= payment.payment_method %></td>
                    <td><%= new Date(payment.date).toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        // Filtro de la tabla
        document.getElementById('filterButton').addEventListener('click', function() {
            const filterValue = document.getElementById('filterInput').value;
            const rows = document.querySelectorAll('#paymentsTableBody tr');

            if (filterValue === '') {
                rows.forEach(row => {
                    row.style.display = '';
                });
            } else {
                rows.forEach(row => {
                    const id = row.querySelector('td').innerText;
                    if (id === filterValue) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>
